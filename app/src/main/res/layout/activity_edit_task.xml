<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTaskActivity">

    <TextView
        android:id="@+id/tv_edit_task_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:text="Edit Task"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_edit_taskname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:ems="10"
        android:hint="Task Name"
        android:inputType="textPersonName"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_task_text" />

    <SeekBar
        android:id="@+id/sb_edit_priority"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="54dp"
        android:max="2"
        app:layout_constraintEnd_toEndOf="@+id/et_edit_taskname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_edit_taskname"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_taskname" />

    <ImageView
        android:id="@+id/edit_imageView2"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/sb_edit_priority"
        app:layout_constraintTop_toBottomOf="@+id/sb_edit_priority"
        app:srcCompat="@drawable/redcircle_foreground" />

    <ImageView
        android:id="@+id/edit_imageView3"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_imageView2"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/edit_imageView"
        app:layout_constraintTop_toBottomOf="@+id/sb_edit_priority"
        app:srcCompat="@drawable/orangecircle_foreground" />

    <TextView
        android:id="@+id/edit_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Low"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_imageView"
        app:layout_constraintStart_toStartOf="@+id/edit_imageView"
        app:layout_constraintTop_toBottomOf="@+id/edit_imageView" />

    <TextView
        android:id="@+id/edit_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="High"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_imageView2"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/edit_imageView2"
        app:layout_constraintTop_toBottomOf="@+id/edit_imageView2" />

    <EditText
        android:id="@+id/et_edit_taskdesc"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Task Description"
        android:inputType="textMultiLine"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/et_edit_taskname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_edit_taskname"
        app:layout_constraintTop_toBottomOf="@+id/edit_imageView3" />

    <TextView
        android:id="@+id/tv_edit_due_date"
        android:layout_width="145dp"
        android:layout_height="39dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:hint="dd/mm/yy"
        android:inputType="date"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_textView3"
        app:layout_constraintStart_toStartOf="@+id/edit_textView3"
        app:layout_constraintTop_toBottomOf="@+id/edit_textView3" />

    <Button
        android:id="@+id/btn_confirm_edit_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="138dp"
        android:text="Confirm Edit"
    app:layout_constraintEnd_toEndOf="@+id/et_edit_taskdesc"
    app:layout_constraintHorizontal_bias="0.486"
    app:layout_constraintStart_toStartOf="@+id/et_edit_taskdesc"
    app:layout_constraintTop_toBottomOf="@+id/et_edit_taskdesc" />

    <ImageView
        android:id="@+id/edit_imageView"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/sb_edit_priority"
        app:layout_constraintTop_toBottomOf="@+id/sb_edit_priority"
        app:srcCompat="@drawable/greencircle_foreground" />

    <TextView
        android:id="@+id/edit_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sb_edit_priority"
        app:layout_constraintEnd_toEndOf="@+id/sb_edit_priority"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/sb_edit_priority" />

    <TextView
        android:id="@+id/edit_textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_imageView3"
        app:layout_constraintStart_toStartOf="@+id/edit_imageView3"
        app:layout_constraintTop_toBottomOf="@+id/edit_imageView3" />

    <TextView
        android:id="@+id/edit_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Due Date"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_taskdesc" />

</androidx.constraintlayout.widget.ConstraintLayout>